syn off

set autochdir
set autoread
set backspace=2
set clipboard=unnamed
set colorcolumn=80,90,100
set cursorline
set ignorecase
set incsearch
set laststatus=2
set mouse=a
set nohlsearch
set noswapfile
set nowrap
set re=1
set relativenumber
set scrolloff=10
set smartcase
set splitbelow
set splitright
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*
set statusline+=%#warningmsg#
set tabstop=4 softtabstop=0 expandtab shiftwidth=4 smarttab
set tags=tags;~/Documents/workspace
set updatetime=250
set wildmenu
set wrap

" Remaps
map ; :
map <C-c> <Esc>
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
map <S-h> gT
map <S-l> gt
nnoremap <C-g> :Ag<Cr>
nnoremap <C-p> :GFiles<Cr>

" Allow meta keys in terminal:
tmap <silent> <M-b> <C-w>:call term_sendkeys(bufnr('%'), "\<lt>Esc>b")<CR>
tmap <silent> <M-d> <C-w>:call term_sendkeys(bufnr('%'), "\<lt>Esc>d")<CR>
tmap <silent> <M-f> <C-w>:call term_sendkeys(bufnr('%'), "\<lt>Esc>f")<CR>
tmap <silent> <M-e> <C-w>:call term_sendkeys(bufnr('%'), "\<lt>Esc>e")<CR>

" :term buffer remaps
tmap <C-n> <C-w>N
tmap <C-h> <C-w>h
tmap <C-j> <C-w>j
tmap <C-k> <C-w>k
tmap <C-l> <C-w>l
tmap <C-w>H <C-w>gT
tmap <C-w>L <C-w>gt

" vim-plug

call plug#begin()

Plug 'NLKNguyen/papercolor-theme'
Plug 'airblade/vim-gitgutter'
Plug 'bronson/vim-trailing-whitespace'
Plug 'cespare/vim-toml'
Plug 'dense-analysis/ale'
Plug 'github/copilot.vim'
Plug 'itchyny/lightline.vim'
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'
Plug 'leafgarland/typescript-vim'
Plug 'mhinz/vim-signify'
Plug 'rust-lang/rust.vim'
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-surround'

call plug#end()

" ALE config
let g:ale_javascript_eslint_use_global = 1
let g:ale_javascript_eslint_executable = 'eslint_d'

let g:ale_linters = {
      \ 'javascript': ['eslint'],
      \ 'typescript': ['tslint'],
      \ }

let g:ale_fixers = {
      \ 'javascript': ['eslint'],
      \ 'typescript': ['tslint'],
      \ }

" wildmenu config
set wildignore+=*.bmp,*.gif,*.ico,*.jpg,*.png,*.ico
set wildignore+=*.pdf,*.psd
set wildignore+=node_modules/*,bower_components/*

" Papercolor config ('colorscheme PaperColor' must be the last line)

let g:lightline = {
      \ 'colorscheme': 'PaperColor',
      \ }

colorscheme PaperColor

" Cursor options
let &t_RS = "\<Esc>[6 q"
let &t_SI = "\<Esc>[6 q"
let &t_SR = "\<Esc>[6 q"
let &t_EI = "\<Esc>[6 q"

set background=light

" Better color for trailing spaces
hi ExtraWhitespace guibg=#BF616A

" Windows options
if has("win32") || has("win64")
    " Set Widnows type font
    set guifont=Cascadia_Code:h10:cANSI:qDRAFT

    " Fix gitgutter for Windows (Git command preference)
    let g:gitgutter_git_executable = 'C:\Program Files\Git\cmd\git.exe'

    " Bind powershell to the :term command
    cabbrev term term ++close pwsh

    " Use internal grep on Windows
    set grepprg=internal
endif

" Set GUI options
set guioptions=aegitk
set guicursor+=n-v-c:blinkon0
set guicursor+=i:blinkwait10

" Only on linux:
if has("gui_gtk2") || has("gui_gtk3")
    set guifont=Monospace\ Regular\ 9
endif

" Only MacVim
if has("gui_macvim")
    set guifont=Menlo-Regular:h14
endif
