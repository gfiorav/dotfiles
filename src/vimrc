" Remember to install Vundle first
" (https://github.com/VundleVim/Vundle.vim#quick-start), startup vim and type
" :PluginInstall to get the plugins installed.

syn off

set autochdir
set autoread
set backspace=2
set clipboard=unnamed
set colorcolumn=80,90,100
set cursorline
set incsearch
set laststatus=2
set nohlsearch
set noswapfile
set nowrap
set re=1
set relativenumber
set scrolloff=10
set splitbelow
set splitright
set statusline+=%#warningmsg#
set statusline+=%*
set statusline+=%{SyntasticStatuslineFlag()}
set tabstop=2 softtabstop=0 expandtab shiftwidth=2 smarttab
set termguicolors
set updatetime=250
set wildmenu

" Remaps
map ; :
map <C-c> <Esc>
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
map <S-h> gT
map <S-l> gt

" :term buffer remaps
tmap <C-n> <C-w>N
tmap <C-h> <C-w>h
tmap <C-j> <C-w>j
tmap <C-k> <C-w>k
tmap <C-l> <C-w>l
tmap <C-w>H <C-w>gT
tmap <C-w>L <C-w>gt

" Vundle config start

set nocompatible
filetype off

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'VundleVim/Vundle.vim'

" Plugins
Plugin 'NLKNguyen/papercolor-theme'
Plugin 'airblade/vim-gitgutter'
Plugin 'bronson/vim-trailing-whitespace'
Plugin 'cespare/vim-toml'
Plugin 'ctrlpvim/ctrlp.vim'
Plugin 'dense-analysis/ale'
Plugin 'itchyny/lightline.vim'
Plugin 'leafgarland/typescript-vim'
Plugin 'pbrisbin/vim-colors-off'
Plugin 'tpope/vim-fugitive'
Plugin 'vim-ruby/vim-ruby'

" Vundle config end

call vundle#end()
filetype plugin indent on

" ALE config
let g:ale_javascript_eslint_use_global = 1
let g:ale_javascript_eslint_executable = 'eslint_d'

let g:ale_linters = {
      \ 'javascript': ['eslint'],
      \ 'typescript': ['tslint'],
      \ }

let g:ale_fixers = {
      \ 'javascript': ['eslint'],
      \ 'typescript': ['tslint'],
      \ }

" CtrlP config

set wildignore+=*/tmp/*,*.so,*.swp,*.zip
set wildignore+=*\\tmp\\*,*.swp,*.zip,*.exe
let g:ctrlp_custom_ignore = 'node_modules\|DS_Store\|git\|deps\|_build\|build\|python*'

" wildmenu config
set wildignore+=*.bmp,*.gif,*.ico,*.jpg,*.png,*.ico
set wildignore+=*.pdf,*.psd
set wildignore+=node_modules/*,bower_components/*

if &term =~ '256color'
    " Disable Background Color Erase (BCE) so that color schemes
    " work properly when Vim is used inside tmux and GNU screen.
    set t_ut=
endif

" Papercolor config ('colorscheme PaperColor' must be the last line)

let g:lightline = {
      \ 'colorscheme': 'PaperColor',
      \ }

colorscheme PaperColor

set background=light

" Better color for trailing spaces
hi ExtraWhitespace guibg=#BF616A
